<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6E460"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_x="0dp"
        android:textAlignment="center"
        android:layout_y="51dp"
        android:text="Welcome In NITT Messaging App"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal|center_vertical" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="155dp"
        android:ems="10"
        android:textColor="@color/white"
        android:inputType="number"
        android:hint="106118055" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="111dp"
        android:layout_y="230dp"
        android:textColor="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Manmohan Tiwary" />

    <Button
        android:id="@+id/button"
        android:layout_width="118dp"
        android:layout_height="58dp"
        android:layout_x="159dp"
        android:textColor="@color/white"
        android:layout_y="341dp"
        android:text="Submit"
        android:background="@color/black"/>
</AbsoluteLayout>